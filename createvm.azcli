#az vm list-sizes --location eastus -o table

$vmLocation = 'eastus'
$vmName = 'VM-02'
$vmRG = 'VM-rg'
$vmSize = 'Standard_B1s'
$vmImage = 'Ubuntu2204'
$vmStorage = 'Standard_LRS'

az vm create `
    --name $vmName `
    --resource-group $vmRG `
    --size $vmSize `
    --image $vmImage `
    --storage-sku $vmStorage `
    --admin-username roger `
    --public-ip-sku Basic `
    --generate-ssh-keys #auto reuse existing key pair.

